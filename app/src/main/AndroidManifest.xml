<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="momonyan.mahjongg_tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/DarkTheme"
        tools:ignore="GoogleAppIndexingWarning"
        android:largeHeap="true"
        >

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-6499097800180510~1231013049" />

        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ToolsActivity"
            android:label="@string/tools"
            android:screenOrientation="portrait"
            android:theme="@style/DarkThemeAction" />
        <activity
            android:name=".activity.MarkToolActivity"
            android:label="符計算"
            android:screenOrientation="portrait"
            android:theme="@style/DarkThemeAction" />

        <activity
            android:name=".activity.YakuListViewActivity"
            android:label="役一覧表"
            android:screenOrientation="portrait"
            android:theme="@style/DarkThemeAction" />
        <activity
            android:name=".activity.PointTableOutputActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.FuTableViewActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.ReadMeActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>