<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.TabItem
            android:id="@+id/tabItem1han"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yakuTable_1han" />

        <android.support.design.widget.TabItem
            android:id="@+id/tabItem2han"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yakuTable_2han" />

        <android.support.design.widget.TabItem
            android:id="@+id/tabItem3han"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yakuTable_3han" />

        <android.support.design.widget.TabItem
            android:id="@+id/tabItem6han"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yakuTable_6han" />

        <android.support.design.widget.TabItem
            android:id="@+id/tabItemYakuman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yakuTable_yakuman" />

    </android.support.design.widget.TabLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabLayout" />

</android.support.constraint.ConstraintLayout>