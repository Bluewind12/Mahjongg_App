<resources>
	
	<!-- Base application theme. -->
	<style name="DarkTheme" parent="Theme.AppCompat.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="colorButtonNormal">@drawable/dark_setting_button</item>
	</style>
	
	<style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimaryLight</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDarkLight</item>
		<item name="colorAccent">@color/colorAccentLight</item>
		<item name="colorButtonNormal">@drawable/light_setting_button</item>
	</style>
	
	<style name="MatTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimaryMat</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDarkMat</item>
		<item name="colorAccent">@color/colorAccentMat</item>
		<item name="android:textColor">@color/noFill</item>
		<item name="android:windowBackground">@color/matBackGround</item>
		<item name="colorButtonNormal">@drawable/mat_setting_button</item>
	</style>
	
	<!-- アクションバーあり -->
	<style name="DarkThemeAction" parent="Theme.AppCompat">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="colorButtonNormal">@drawable/dark_setting_button</item>
	</style>
	
	<style name="LightThemeAction" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimaryLight</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDarkLight</item>
		<item name="colorAccent">@color/colorAccentLight</item>
		<item name="android:windowBackground">@color/noFill</item>
		<item name="colorButtonNormal">@drawable/light_setting_button</item>
	</style>
	
	<style name="MatThemeAction" parent="Theme.AppCompat">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimaryMat</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDarkMat</item>
		<item name="colorAccent">@color/colorAccentMat</item>
		<item name="android:windowBackground">@color/matBackGround</item>
		<item name="colorButtonNormal">@drawable/mat_setting_button</item>
	</style>

</resources>
